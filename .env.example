# Environment Configuration for NurgaVoice
# Copy this file to .env and modify as needed

# Security Configuration
# API Key for authentication - CHANGE THIS FOR PRODUCTION!
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
NURGAVOICE_API_KEY=nurgavoice-demo-key-2025

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# File Upload Settings
# MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_FILE_SIZE=1073741824  # 1024MB in bytes
UPLOAD_DIR=uploads
RESULTS_DIR=results

# AI Model Settings
WHISPER_MODEL=base
LLAMA_MODEL_PATH=models/llama-2-7b-chat.q4_0.bin

# Application Settings
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security (for production)
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Logging Level
LOG_LEVEL=INFO

# Speaker Diarization (Required for speaker separation)
# Get your token from: https://huggingface.co/settings/tokens
# Accept model agreement at: https://huggingface.co/pyannote/speaker-diarization-3.1
HUGGINGFACE_TOKEN=your_huggingface_token_here

# GPU Settings (optional)
# CUDA_VISIBLE_DEVICES=0
# USE_GPU=true
